{
  "name": "vue-voice",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "npm run delete-dist && vue-cli-service build --dest build",
    "lint": "vue-cli-service lint",
    "delete-dist": "rm -rf dist",
    "build:lib": "npm run delete-dist && npm run build:umd & npm run build:es & npm run build:unpkg & node tools/copy-package",
    "build:umd": "rollup --config config/rollup.config.js --format umd --file dist/vue-voice.umd.js",
    "build:es": "rollup --config config/rollup.config.js --format es --file dist/vue-voice.esm.js",
    "build:unpkg": "rollup --config config/rollup.config.js --format iife --file dist/vue-voice.min.js"
  },
  "dependencies": {
    "vue": "^2.5.17"
  },
  "devDependencies": {
    "@vue/cli-plugin-eslint": "^3.0.5",
    "@vue/cli-plugin-typescript": "^3.0.5",
    "@vue/cli-service": "^3.0.5",
    "@vue/eslint-config-typescript": "^3.0.5",
    "typescript": "^3.0.0",
    "vue-template-compiler": "^2.5.17",
    "rollup": "^0.57.1",
    "rollup-plugin-buble": "^0.19.2",
    "rollup-plugin-vue": "^3.0.0",
    "rollup-plugin-uglify": "3.0.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended",
      "@vue/typescript"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "typescript-eslint-parser"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
